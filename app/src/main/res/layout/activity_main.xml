<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textUltima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="8dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="Ãºltima actualizacion:"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textUltimActualizacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="8dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        android:text="@string/ultima_actualizacion"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMonedaBase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:layout_weight="0.3"
            android:text="MXN:"

            android:textAlignment="viewEnd"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editCantidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:layout_marginEnd="10dp"
            android:layout_weight="0.7"
            android:ems="5"
            android:inputType="numberDecimal"
            android:text="10.0"
            android:textSize="22sp"
            android:textStyle="bold" />


    </LinearLayout>


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:max="40"
        android:progress="10" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_marginHorizontal="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/seekBar"
            tools:layout_editor_absoluteX="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewEUR"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"
                    app:srcCompat="@drawable/flag_eur" />

                <TextView
                    android:id="@+id/textMonedaEuro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/moneda_euro"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewUSD"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"

                    app:srcCompat="@drawable/flag_usd" />

                <TextView
                    android:id="@+id/textMonedaDolar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/moneda_dolar"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewGBP"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"

                    app:srcCompat="@drawable/flag_gbp" />

                <TextView
                    android:id="@+id/textMonedaLibra"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="@string/moneda_libra"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewDKK"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"
                    app:srcCompat="@drawable/flag_dkk" />

                <TextView
                    android:id="@+id/textMonedaDanesa"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="DKK:"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewCZK"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"
                    app:srcCompat="@drawable/flag_czk" />

                <TextView
                    android:id="@+id/textMonedaCheca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="CZK:"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewQAR"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"
                    app:srcCompat="@drawable/flag_qar" />

                <TextView
                    android:id="@+id/textMonedaQatar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="QAR:"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewPLN"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"
                    app:srcCompat="@drawable/flag_pln" />

                <TextView
                    android:id="@+id/textMonedaPLN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="PLN:"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewNOK"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.4"
                    app:srcCompat="@drawable/flag_nok" />

                <TextView
                    android:id="@+id/textMonedaNOK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="NOK:"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/botonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Guardar"
        android:textColor="@color/white"
        android:shadowColor="@color/black"/>

</androidx.appcompat.widget.LinearLayoutCompat>